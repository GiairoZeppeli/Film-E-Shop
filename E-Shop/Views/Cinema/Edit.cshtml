@model Cinema

@{
    ViewData["Title"] = "Редактировать " + Model.Name;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Редактировать @Model.Name</h1>
        </p>
         <div class="row">
             <div class="col-md-8 offset-2">
                 <form asp-action="Edit">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" id="ProfilePicturePreview" width="100%" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImgUrl" class="control-label"></label>
                        <input asp-for="ImgUrl" class="form-control" />
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Обновить" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Показать все</a>
                    </div>
                 </form>
             </div>
         </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function()
        {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ImgUrl").val();
        })

        $("#ImgUrl").on("change", function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}